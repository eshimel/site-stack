ul, ol
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  margin 0
  font-familiy open-sans

body, html 
  margin 0
  height 100%
  background-color color3
  background-image url('../images/bg4.png')
  background-attachment fixed
  
p
  font-family work-sans
  
li, ol
  display: inline
  

/*

Title css

*/

.title
  color white
  font-size 20vw
  width 100%
  font-family archive-tilt
  shadow-stroke white

  @media(min-width:767px){
    font-size 11vw
  }

/*

Track css

*/
  
.track-titles
  h1, h2
    font-family roboto
    
  h3, h4
    font-family work-sans
  
.box
  background-color white
  //float left
  margin 5px
  margin-bottom 15px
  width 100%
  padding 5px
  box-shadow 5px 0 5 #444
  display inline-block
  box-shadow 0 5px 7px #aaa
  //transition height .5s ease
  


.box__track
  @extend .track-titles
  color black
  text-shadow 0 1px 2px rgba(black,.15)
  list-style-type none
  
  @media(min-width:767px){
    height 150px
  }
  
  img
    float left
    height 100%
    margin-right 15px
  
    @media(max-width:767px){
      width 100%
    }
    
.box__info
  font-family roboto
    
.box__nowPlaying
  @extend .box__track 
  @media(min-width:767px){
    height 300px
  }

.box--grow
  position absolute
  top 0
  left 0
  z-index 1001
  margin auto


.side
  @extend .box
  color black
  padding 10px
  
  img
    width 100%
    margin-bottom 10px
  
  h2
    font-family roboto
    margin-bottom 10px
  
.side__art
  p
    font-size 1em
  img
    margin-right 3px
    float left
    width 40%

  
.track-list
  padding none
  margin none
  margin-bottom 15px


    

  
.time
  margin-top 5px
  font-size .8em
  font-weight light