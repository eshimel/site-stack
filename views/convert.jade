include mixins/body-mixins

extend layout

block content
	form(class='form-horizontal', action='/convert', method='POST')
		-if(message.length > 0)
			.alert.alert-danger #{message}
		.form-group
			label.col-sm-2.control-label username
			.col-sm-10
				input(type="text" class="form-control" name="email" placeholder="RstrIzMyCplt")
			label.col-sm-2.control-label password
			.col-sm-10
				input(type="password" class="form-control" name="password" placeholder="Password")

		.form-group
			button.col-sm-offset-2(type="submit" class="btn btn-default") Convert