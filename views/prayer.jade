block content
    h1 Prayers to his waddle

    form(class='form-horizontal', action='/prayerwall', method='POST')
        -if(message.length > 0)
            .alert.alert-danger #{message}
        .form-group
            label.col-sm-12.control-label By the grace of His beak
            .col-sm-12
                input(type="text" class="form-control" name="prayer" placeholder="thanks be to the Rooster")

        .form-group
            button.col-sm-2(type="submit" class="btn btn-default") Pray

